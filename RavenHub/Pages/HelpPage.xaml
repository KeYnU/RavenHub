<Page x:Class="RavenHub.Pages.HelpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:RavenHub.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HelpPage">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <materialDesign:PackIcon Kind="handshake" Width="32" Height="32" Margin="0,0,8,0"/>
            <TextBlock Text="Инструкция по использованию" 
                       Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Скрины для показа что могет моя прога -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Фото 1 -->
                <StackPanel Margin="0,0,0,24">
                    <Border CornerRadius="4"
                    Margin="0,0,0,8"
                    Background="White">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" 
                                     ShadowDepth="3" 
                                     Color="Black" 
                                     Opacity="0.15"/>
                        </Border.Effect>
                        <Image Source="/HelposPage/help1.jpg" 
                       Stretch="Uniform"/>
                    </Border>
                    <TextBlock Text="Основное окно которое вы видите при открытии программы" 
                       Style="{StaticResource MaterialDesignBody2TextBlock}"
                       Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Фото 2 -->
                <StackPanel Margin="0,0,0,24">
                    <Border CornerRadius="4"
                    Margin="0,0,0,8"
                    Background="White">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" 
                                     ShadowDepth="3" 
                                     Color="Black" 
                                     Opacity="0.15"/>
                        </Border.Effect>
                        <Image Source="/HelposPage/help2.jpg" 
                       Stretch="Uniform"/>
                    </Border>
                    <TextBlock Text="Список сотрудников компании" 
                       Style="{StaticResource MaterialDesignBody2TextBlock}"
                       Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Фото 3 -->
                <StackPanel Margin="0,0,0,24">
                    <Border CornerRadius="4"
                    Margin="0,0,0,8"
                    Background="White">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" 
                                     ShadowDepth="3" 
                                     Color="Black" 
                                     Opacity="0.15"/>
                        </Border.Effect>
                        <Image Source="/HelposPage/help3.jpg" 
                       Stretch="Uniform"/>
                    </Border>
                    <TextBlock Text="Список задач компании. Тут указано, какие задачи были выполнены, а какие нет" 
                       Style="{StaticResource MaterialDesignBody2TextBlock}"
                       Margin="0,4,0,0"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <Button Grid.Row="2" 
                Content="← Назад"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Left"
                Margin="0,10,0,0" Click="Button_Click"/>
    </Grid>
</Page>