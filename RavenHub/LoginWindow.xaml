<Window x:Class="RavenHub.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="RavenHub - Login"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Height="450" 
        Width="400"
        Background="Transparent">

    <Window.Resources>
        <Storyboard x:Key="ShowPasswordAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                            From="0" To="1" Duration="0:0:0.2"/>
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                            From="0.98" To="1" Duration="0:0:0.2"/>
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                            From="0.98" To="1" Duration="0:0:0.2"/>
        </Storyboard>
        <Storyboard x:Key="HidePasswordAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                            From="1" To="0" Duration="0:0:0.2"/>
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                            From="1" To="0.98" Duration="0:0:0.2"/>
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                            From="1" To="0.98" Duration="0:0:0.2"/>
        </Storyboard>
    </Window.Resources>

    <Border CornerRadius="10" 
            Background="{DynamicResource MaterialDesignBackground}"
            BorderBrush="{DynamicResource MaterialDesignDivider}"
            BorderThickness="1">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Панель управления окном -->
            <Grid Grid.Row="0" Height="35">
                <!-- Область для перетаскивания окна -->
                <Grid Background="Transparent" MouseLeftButtonDown="DragWindow">
                    <TextBlock Text="RavenHub" HorizontalAlignment="Center" VerticalAlignment="Center" 
                              FontSize="14" FontWeight="Medium" Margin="0,8,0,0"/>
                </Grid>

                <!-- Кнопки управления окном -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,10,0">
                    <!-- Кнопка сворачивания -->
                    <Button x:Name="btnMinimize" Width="25" Height="25" 
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Padding="0" Margin="0,0,5,0"
                            Click="btnMinimize_Click">
                        <materialDesign:PackIcon Kind="WindowMinimize" Width="16" Height="16"/>
                    </Button>

                    <!-- Кнопка закрытия -->
                    <Button x:Name="btnClose" Width="25" Height="25" 
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Padding="0"
                            Click="btnClose_Click">
                        <materialDesign:PackIcon Kind="Close" Width="16" Height="16"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Содержимое окна -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="20">
                <materialDesign:PackIcon 
                    Kind="DesktopClassic" 
                    Width="80" 
                    Height="80"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,10"/>

                <TextBlock Text="Welcome to RavenHub"
                          HorizontalAlignment="Center"
                          FontSize="20"
                          FontWeight="SemiBold"
                          Margin="0,0,0,30"/>

                <TextBox 
                    x:Name="txtUsername"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    materialDesign:HintAssist.Hint="Username"
                    Margin="0,0,0,10"/>

                <!-- Поле пароля с кнопкой переключения и анимацией -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <PasswordBox 
                        x:Name="txtPassword"
                        Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                        materialDesign:HintAssist.Hint="Password"
                        Grid.Column="0"
                        Opacity="1">
                        <PasswordBox.RenderTransform>
                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                        </PasswordBox.RenderTransform>
                    </PasswordBox>

                    <TextBox 
                        x:Name="txtPasswordVisible"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        materialDesign:HintAssist.Hint="Password"
                        Grid.Column="0"
                        Visibility="Collapsed"
                        Opacity="0">
                        <TextBox.RenderTransform>
                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                        </TextBox.RenderTransform>
                    </TextBox>

                    <Button 
                        x:Name="btnTogglePassword"
                        Grid.Column="1"
                        Style="{StaticResource MaterialDesignIconButton}"
                        Margin="4,0,0,0"
                        Click="TogglePasswordVisibility"
                        materialDesign:ButtonAssist.CornerRadius="2"
                        VerticalAlignment="Bottom"
                        Height="{Binding ActualHeight, ElementName=txtPassword}"
                        ToolTip="Show password">
                        <materialDesign:PackIcon 
                            Kind="EyeOutline" 
                            Width="20"
                            Height="20"/>
                    </Button>
                </Grid>

                <Button 
                    Content="Login"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Padding="15,5"
                    HorizontalAlignment="Stretch"
                    Click="Button_Click"
                    Margin="0,0,0,10" Width="85"/>

                <Button 
                    Content="Sign in"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Background="DimGray"
                    Foreground="White"
                    HorizontalAlignment="Center"
                    Click="RegisterButton_Click" Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>