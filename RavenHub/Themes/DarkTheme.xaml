<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Основные цвета для темной темы -->
    <Color x:Key="DarkBackground">#252626</Color>
    <!-- Все так же черный -->
    <Color x:Key="DarkSurface">#252626</Color>
    <!-- Светло-серый -->
    <Color x:Key="DarkCard">#4e4f4f</Color>
    <!-- Светло-серый -->
    <Color x:Key="DarkDivider">#4e4f4f</Color>
    <!-- Разделители -->

    <!-- Переопределяем стандартные кисти Material Design -->
    <SolidColorBrush x:Key="MaterialDesignBackground" Color="{StaticResource DarkBackground}"/>
    <SolidColorBrush x:Key="MaterialDesignPaper" Color="{StaticResource DarkSurface}"/>
    <SolidColorBrush x:Key="MaterialDesignCardBackground" Color="{StaticResource DarkCard}"/>
    <SolidColorBrush x:Key="MaterialDesignDivider" Color="{StaticResource DarkDivider}"/>

    <!-- Цвета текста -->
    <SolidColorBrush x:Key="MaterialDesignBody" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="MaterialDesignBodyLight" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="MaterialDesignColumnHeader" Color="#BDBDBD"/>
    <SolidColorBrush x:Key="MaterialDesignForeground" Color="#FFFFFF"/>

    <!-- Дополнительные элементы -->
    <SolidColorBrush x:Key="MaterialDesignTextBoxBorder" Color="#404040"/>
    <SolidColorBrush x:Key="MaterialDesignCheckBoxOff" Color="#BDBDBD"/>
    <SolidColorBrush x:Key="MaterialDesignCheckBoxDisabled" Color="#303030"/>

    <!-- Фон для кнопок и других элементов -->
    <SolidColorBrush x:Key="MaterialDesignToolBarBackground" Color="#181818"/>
    <SolidColorBrush x:Key="MaterialDesignNavigationBarBackground" Color="#101010"/>

    <!-- DataGrid -->
    <SolidColorBrush x:Key="MaterialDesignDataGridRowHoverBackground" Color="#252525"/>
    <SolidColorBrush x:Key="MaterialDesignSelection" Color="#303030"/>
</ResourceDictionary>